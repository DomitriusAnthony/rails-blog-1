<div class="col-sm-11 col-xs-12 blog-content">
  <div class="text-center">
    <h2><%= @post.title %></h2>
    <h4><%= User.find(@post.user_id).full_name%></h4>
    <h5><%= @post.created_at.strftime('%Y %b %d') %></h5>
    <div><%= raw @post.body %></div>
    <% if current_user == User.find(@post.user_id) %>
      <%= link_to "Edit", edit_post_path(@post), class: "btn btn-default" %>
      <%= link_to "Delete", post_path(@post), class: "btn btn-danger", data: {:confirm => "Are you sure?"}, method: :delete %>
    <% end %>
    <br>
    <br>
    <h3>Comments</h3>
    <hr>
    <% @post.comments.each do |comment| %>
      <h4><%= User.find(comment.user_id).full_name%></h4>
      <h5><%= comment.created_at.strftime('%Y %b %d') %></h5>
      <div><%= raw comment.body %></div>
      <% if current_user == User.find(comment.user_id) %>
        <p><strong>This is your post!</strong></p>
        <%# <%= link_to "Edit", edit_post_path(@post), class: "btn btn-default" %1> %>
        <%# <%= link_to "Delete", post_path(@post), class: "btn btn-danger", data: {:confirm => "Are you sure?"}, method: :delete %1> %>
      <% end %>
      <hr>
    <% end %>
    <!-- Need to add ability to make new comment, and something to edit previous comments  -->
  </div>
</div>
